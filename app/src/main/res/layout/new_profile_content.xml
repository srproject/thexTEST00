<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sr.thex.fragment.NewProFragment"
    tools:showIn="@layout/new_profile_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:text="@string/account_name"
                android:gravity="center_horizontal"
                android:layout_gravity="center|top"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:id="@+id/prousername"
                android:textSize="15pt"
                android:textColor="#000"

                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="20dp">


            <TextView
                android:text="@string/event"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="130dp"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:id="@+id/post"
                android:textSize="10pt" />

            <TextView
                android:text="@string/number_event"
                android:gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="130dp"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:id="@+id/postn"
                android:textStyle="bold"
                android:textSize="11pt" />
            <TextView
                android:id="@+id/follo"
                android:layout_width="136dp"
                android:layout_height="30dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/followers"
                android:textSize="10pt" />

            <TextView
                android:text="@string/number_followers"
                android:gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="140dp"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:id="@+id/follon"
                android:textStyle="bold"
                android:textSize="11pt" />

            <TextView
                android:text="@string/likes"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="270dp"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:id="@+id/like"
                android:textSize="10pt" />

            <TextView
                android:text="@string/number_likes"
                android:gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="270dp"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:id="@+id/liken"
                android:textStyle="bold"
                android:textSize="11pt" />

            <TextView
                android:text="@string/edit_profile"
                android:gravity="center_horizontal"
                android:layout_gravity="center|top"
                android:layout_marginTop="90dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:layout_width="157dp"
                android:layout_height="30dp"
                android:id="@+id/editprofiletext"
                android:textSize="10pt"
                android:textColor="#0033ff"
                android:background="@drawable/border"

                />



        </android.support.v7.widget.CardView>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
